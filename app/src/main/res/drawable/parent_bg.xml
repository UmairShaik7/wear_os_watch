<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingMode="nest">
    <item>
        <shape android:shape="rectangle">

            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />

            <gradient
                android:angle="90"
                android:centerColor="#000"
                android:endColor="#000"
                android:startColor="#885d5d5e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <stroke
                android:width="1dp"
                android:color="@color/parent_border" />

        </shape>
    </item>
</layer-list>